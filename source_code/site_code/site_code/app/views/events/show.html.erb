
<div class= "info">
<h2><%= @event.title %> </h2>
<h4><%= @event.date %> </h4>
<h4><%= @event.time %> </h4>
<h4><%= @event.location %> </h4>
<p><%= @event.body %> </p>
<br>
<%= link_to "Edit", edit_event_path(@event), :class => 'btn btn-default' %>
<%= link_to "Delete", event_path(@event),
				method: :delete,
				data: {confirm: 'Are you sure?'},
			 	:class => 'btn btn-danger' %>
<br>
</div>